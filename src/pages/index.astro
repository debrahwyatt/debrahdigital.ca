---
import '../styles/index.css'
import BaseLayout from '../layouts/base-layout.astro';
---

<BaseLayout title="Debrah's Digital Solutions">
  <div class="page-wrapper">
    <h1 class="sr-only">Debrah's Digital Solutions - Tech Help in Fairview, Alberta</h1>

    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-text">
        <h1>
          Tech Help at Your Doorstep - 
          <span class="highlight">Fast, Friendly, Local.</span>
        </h1>
        <p>Computer repair, training, on-site support, and smart tech solutions for homes and businesses in Fairview, Alberta.</p>

        <div class="hero-buttons">
          <a href="/contact" class="btn">Connect with Us</a>
        </div>
      </div>
      <div class="hero-image">
        <div id="logo-spinner">
          <img 
            id="logo" 
            class="ai-head" 
            src="/logo_web.webp" 
            srcset="/logo_web_375x375.webp 2x" 
            alt="Debrah's Digital Solutions Logo" 
            width="250" 
            height="250" 
          />
        </div>
      </div>
    </section>

    <!-- Services Icons Grid -->
    <section class="services-section">
      <h2>Our Services</h2>
      <p class="subtitle">Expert Tech Help with a Human Touch</p>

      <div class="services-grid">
        <a href="/services/computer-repair">
          <div class="service-item">
            <img 
              src="/icon-repair.webp" 
              srcset="/icon-repair_96x96.webp 2x" 
              alt="Repairs" 
              width="64" 
              height="64" 
            />
            <h3>Computer Repair Services</h3>
          </div>
        </a>

        <a href="/services/phone-tablet-repair">
          <div class="service-item">
            <img 
              src="/icon-phone-tablet.webp" 
              srcset="/icon-phone-tablet_96x96.webp 2x" 
              alt="Phones & Tablets" 
              width="64" 
              height="64" 
            />
            <h3>Phone & Tablet Repair Services</h3>
          </div>
        </a>

        <a href="/services/digital-skills-training">
          <div class="service-item">
            <img 
              src="/icon-training.webp" 
              srcset="/icon-training_96x96.webp 2x" 
              alt="Training" 
              width="64" 
              height="64" 
            />
            <h3>Digital Skills Training</h3>
          </div>
        </a>

        <a href="/services/onsite-tech-support">
          <div class="service-item">
            <img 
              src="/icon-onsite.webp" 
              srcset="/icon-onsite_96x96.webp 2x" 
              alt="Support" 
              width="64" 
              height="64" 
            />
            <h3>On-Site Support</h3>
          </div>
        </a>

        <a href="/services/network-optimization">
          <div class="service-item">
            <img 
              src="/icon-networking.webp" 
              srcset="/icon-networking_96x96.webp 2x" 
              alt="Networking" 
              width="64" 
              height="64" 
            />
            <h3>Network Optimization</h3>
          </div>
        </a>

        <a href="/services/website-development">
          <div class="service-item">
            <img 
              src="/icon-web.webp" 
              srcset="/icon-web_96x96.webp 2x" 
              alt="Websites" 
              width="64" 
              height="64" 
            />
            <h3>Website Development</h3>
          </div>
        </a>

        <a href="/services/business-tech-consulting">
          <div class="service-item">
            <img 
              src="/icon-consulting.webp" 
              srcset="/icon-consulting_96x96.webp 2x" 
              alt="Consulting" 
              width="64" 
              height="64" 
            />
            <h3>Business Tech Consulting</h3>
          </div>
        </a>

        <a href="/services/ai-automation">
          <div class="service-item">
            <img 
              src="/icon-ai.webp" 
              srcset="/icon-ai_96x96.webp 2x" 
              alt="Automation" 
              width="64" 
              height="64" 
            />
            <h3>AI Tools & Automation</h3>
          </div>
        </a>

        <a href="/services/custom-software">
          <div class="service-item">
            <img 
              src="/icon-software.webp" 
              srcset="/icon-software_96x96.webp 2x" 
              alt="Software" 
              width="64" 
              height="64" 
            />
            <h3>Custom Software Solutions</h3>
          </div>
        </a>

      </div>
    </section>

    <!-- Info Grid Section -->
    <section class="info-section">
      <div class="info-grid">

        <div class="info-card">
          <h3>Client-Focused Solutions</h3>
          <p>
            Need help with a computer, website, or system upgrade?<br /><br />
            I provide on-site visits, remote assistance, and tailored solutions built to match your needs.
          </p>
          <ul class="checklist">
            <li>Fast Response</li>
            <li>Clear Communication</li>
            <li>Affordable, Professional</li>
          </ul>
          <a href="/services" class="btn info-btn">Learn More About Our Services</a>
        </div>

        <div class="info-card">
          <h3>About Debrah</h3>
          <h4>Debrah Wyatt, E.I.T.</h4>
          <p>
            Software Developer & Tech Consultant<br />
            <br />
            Specialization in Artificial Intelligence<br />        
            Bachelor of Software Engineering, UVic<br />
            20+ years experience in tech & automation
          </p>
          <br />
          <em>“Tech made simple, right at your doorstep.”</em><br />
          <a href="/about" class="btn info-btn">More About Us</a>
        </div>

        <div class="info-card full-width">
          <h3>Contact or Book Now</h3>
          <p>Ready to simplify your tech? Let's talk.</p>
          <a href="/contact" class="btn info-btn">Contact or Book Now</a>
        </div>

      </div>
    </section>
  </div>

</BaseLayout>
