---
import '../styles/base-layout.css'

import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import siteMetadata from '../lib/site-metadata.ts';

const {
  title = siteMetadata.siteName,
  description = siteMetadata.description,
  keywords = siteMetadata.keywords,
  ogImage = siteMetadata.ogImage,
} = Astro.props;
---

<html lang="en">
  
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(', ')} />
    <meta name="author" content={siteMetadata.author} />
    <meta name="robots" content="index, follow, max-snippet:-1, max-video-preview:-1, max-image-preview:large" />
    <link rel="canonical" href={Astro.url.href} />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/favicon.ico" />

    <!-- OpenGraph -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content={siteMetadata.siteUrl} />
    <meta property="og:site_name" content={siteMetadata.siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={siteMetadata.siteUrl + ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Debrah's Digital Solutions logo and service banner" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteMetadata.siteName} />
    <meta name="twitter:description" content="Tailored tech help and automation for businesses and homes in Alberta." />
    <meta name="twitter:image" content={siteMetadata.siteUrl + ogImage} />

    <script src="/js/dropdown.js" defer></script>
    <script src="/js/rotate-logo.js" defer></script>
    <script src="/js/structured-data.js" is:inline></script>
    
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
